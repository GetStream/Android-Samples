<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Overview Screen -->

    <style name="OverviewStatsItem">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">@dimen/margin_tiny</item>
    </style>

    <style name="OverviewStatsItemBadge">
        <item name="android:textAppearance">@style/BodyBold</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:background">@drawable/bg_badge_stats</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="OverviewStatsItemDescription">
        <item name="android:textAppearance">@style/Body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_mid_emphasis</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <style name="OverviewSectionTitle">
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:textAppearance">@style/Title3Bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OverviewPartnerLogo">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <!-- Event Cards -->

    <style name="EventCard">
        <item name="android:layout_marginHorizontal">@dimen/margin_large</item>
        <item name="android:layout_marginVertical">@dimen/margin_medium</item>
        <item name="elevation">4dp</item>
        <item name="cardBackgroundColor">@color/app_canvas</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <!-- Typography -->

    <style name="BaseTextAppearance"></style>

    <style name="Title1" parent="@style/BaseTextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Title2" parent="@style/BaseTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="Title2Bold" parent="@style/BaseTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="Title3" parent="@style/BaseTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="Title3Bold" parent="@style/BaseTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="Body" parent="@style/BaseTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="BodyItalic" parent="@style/BaseTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="BodyBold" parent="@style/BaseTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Footnote" parent="@style/BaseTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="FootnoteItalic" parent="@style/BaseTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="FootnoteBold" parent="@style/BaseTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Caption" parent="@style/BaseTextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
</resources>
