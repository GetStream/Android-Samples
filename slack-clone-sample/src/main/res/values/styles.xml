<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChannelTitleTextAppearance" parent="StreamUiTextAppearance.BodyBold">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomMessageListHeader" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SlackTextAppearance" parent="StreamUiTextAppearance.Body">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SlackTextAppearance.Title">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SlackTextAppearance.Timestamp">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/stream_ui_grey</item>
    </style>

    <style name="SlackTextAppearance.DateDivider">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/stream_ui_black</item>
    </style>
</resources>