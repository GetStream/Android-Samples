<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.getstream.chat.virtualevent">

    <application
        android:name=".VirtualEventApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.VirtualEvent">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.getstream.chat.virtualevent.feature.event.detail.EventDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VirtualEvent.BlackStatusBar" />
        <activity
            android:name="io.getstream.chat.virtualevent.feature.dm.DirectChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.getstream.chat.virtualevent.feature.dm.new.SelectParticipantActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.getstream.chat.virtualevent.feature.user.SwitchUserActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>