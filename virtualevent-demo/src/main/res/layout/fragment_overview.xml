<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        tools:context=".feature.overview.OverviewFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_overview_header"
            app:layout_constraintBottom_toTopOf="@+id/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/bg_event_logo"
            android:src="@drawable/ic_event_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:text="@string/overview_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintLeft_toRightOf="@+id/logo"
            app:layout_constraintTop_toTopOf="@+id/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:text="@string/overview_subtitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintLeft_toRightOf="@+id/logo"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/stats_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:text="@string/overview_stats_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <GridLayout
            android:id="@+id/stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:columnCount="2"
            app:layout_constraintTop_toBottomOf="@+id/stats_label">

            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/OverviewStatsItemNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days"
                    android:textColor="#8A898E"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    style="@style/OverviewStatsItemNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speakers"
                    android:textColor="#8A898E"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    style="@style/OverviewStatsItemNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main events"
                    android:textColor="#8A898E"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    style="@style/OverviewStatsItemNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2k" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tickets sold"
                    android:textColor="#8A898E"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    style="@style/OverviewStatsItemNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rooms"
                    android:textColor="#8A898E"
                    android:textSize="14sp" />
            </LinearLayout>
        </GridLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:text="@string/overview_description_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stats" />

        <TextView
            android:id="@+id/description_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:text="@string/overview_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" />

        <TextView
            android:id="@+id/partners"
            style="@style/OverviewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:text="@string/overview_partners_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_body" />

        <GridLayout
            android:id="@+id/partners_logos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:layout_marginVertical="12dp"
            android:columnCount="2"
            app:layout_constraintTop_toBottomOf="@+id/partners">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/ic_red_canary_logo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/ic_symantec_logo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/ic_crowdstrike_logo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/ic_cybereason_logo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:src="@drawable/ic_goguardian_logo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/ic_logrythm_logo" />

        </GridLayout>

        <TextView
            android:id="@+id/schedule"
            style="@style/OverviewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="@string/overview_schedule_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partners_logos" />

        <androidx.cardview.widget.CardView
            android:id="@+id/event1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:elevation="6dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@+id/schedule">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/hypercube_header"
                    android:layout_width="match_parent"
                    android:layout_height="162dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_hypercube_header"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hypercube_title"
                    style="@style/OverviewHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:drawablePadding="@dimen/margin_medium"
                    android:text="ESG Data - How to create it"
                    app:drawableLeftCompat="@drawable/ic_presentation"
                    app:layout_constraintTop_toBottomOf="@+id/hypercube_header" />

                <TextView
                    android:id="@+id/hypercube_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:text="@string/overview_hypercube_body"
                    app:layout_constraintTop_toBottomOf="@+id/hypercube_title" />

                <TextView
                    android:id="@+id/participants_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="8dp"
                    android:text="2"
                    app:drawableLeftCompat="@drawable/ic_participant"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hypercube_body" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="8dp"
                    android:text="150"
                    app:drawableLeftCompat="@drawable/ic_eye"
                    app:layout_constraintLeft_toRightOf="@+id/participants_logo"
                    app:layout_constraintTop_toBottomOf="@+id/hypercube_body" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@drawable/bg_private_badge"
                    android:padding="8dp"
                    android:text="@string/private_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hypercube_body" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/event2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:elevation="6dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@+id/event1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/layers_header"
                    android:layout_width="match_parent"
                    android:layout_height="162dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_overview_layers"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/layers_title"
                    style="@style/OverviewHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:drawablePadding="@dimen/margin_medium"
                    android:text="@string/overview_layers_title"
                    app:drawableLeftCompat="@drawable/ic_qa"
                    app:drawableTint="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/layers_header" />

                <TextView
                    android:id="@+id/layers_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:text="@string/overview_layers_body"
                    app:layout_constraintTop_toBottomOf="@+id/layers_title" />

                <TextView
                    android:id="@+id/participants_logo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="8dp"
                    android:text="6/9"
                    app:drawableLeftCompat="@drawable/ic_participant"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layers_body" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="8dp"
                    android:text="150"
                    app:drawableLeftCompat="@drawable/ic_eye"
                    app:layout_constraintLeft_toRightOf="@+id/participants_logo2"
                    app:layout_constraintTop_toBottomOf="@+id/layers_body" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@drawable/bg_moderated_badge"
                    android:padding="8dp"
                    android:text="@string/moderated_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layers_body" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>