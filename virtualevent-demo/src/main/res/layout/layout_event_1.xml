<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/event1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:elevation="6dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hypercube_header"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_hypercube_header"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hypercube_title"
                style="@style/OverviewHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:drawablePadding="@dimen/margin_medium"
                android:text="ESG Data - How to create it"
                app:drawableLeftCompat="@drawable/ic_presentation"
                app:layout_constraintTop_toBottomOf="@+id/hypercube_header" />

            <TextView
                android:id="@+id/hypercube_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@string/overview_hypercube_body"
                app:layout_constraintTop_toBottomOf="@+id/hypercube_title" />

            <TextView
                android:id="@+id/participants_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="8dp"
                android:text="2"
                app:drawableLeftCompat="@drawable/ic_participant"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hypercube_body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="8dp"
                android:text="150"
                app:drawableLeftCompat="@drawable/ic_eye"
                app:layout_constraintLeft_toRightOf="@+id/participants_logo"
                app:layout_constraintTop_toBottomOf="@+id/hypercube_body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/bg_private_badge"
                android:padding="8dp"
                android:text="@string/private_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hypercube_body" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>