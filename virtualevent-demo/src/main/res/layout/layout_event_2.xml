<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/event2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:elevation="6dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/layers_header"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_overview_layers"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/layers_title"
                style="@style/OverviewHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:drawablePadding="@dimen/margin_medium"
                android:text="@string/overview_layers_title"
                app:drawableLeftCompat="@drawable/ic_qa"
                app:drawableTint="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/layers_header" />

            <TextView
                android:id="@+id/layers_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@string/overview_layers_body"
                app:layout_constraintTop_toBottomOf="@+id/layers_title" />

            <TextView
                android:id="@+id/participants_logo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="8dp"
                android:text="6/9"
                app:drawableLeftCompat="@drawable/ic_participant"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layers_body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="8dp"
                android:text="150"
                app:drawableLeftCompat="@drawable/ic_eye"
                app:layout_constraintLeft_toRightOf="@+id/participants_logo2"
                app:layout_constraintTop_toBottomOf="@+id/layers_body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/bg_moderated_badge"
                android:padding="8dp"
                android:text="@string/moderated_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layers_body" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>